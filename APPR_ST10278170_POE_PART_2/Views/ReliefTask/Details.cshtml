@model APPR_ST10278170_POE_PART_2.Models.ReliefTask

@{
    ViewData["Title"] = "Relief Task Details";
}

<h2 class="text-info">Relief Task Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Location:</strong> @Model.Location</p>
        <p class="card-text"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
        <p class="card-text"><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
        <p class="card-text"><strong>Priority:</strong> @Model.Priority</p>
        <p class="card-text"><strong>Disaster Report ID:</strong> @Model.DisasterReportId</p>
        <p class="card-text"><strong>Volunteer ID:</strong> @Model.VolunteerId</p>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
