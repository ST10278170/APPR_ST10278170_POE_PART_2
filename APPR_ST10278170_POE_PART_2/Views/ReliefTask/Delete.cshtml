@model APPR_ST10278170_POE_PART_2.Models.ReliefTask

@{
    ViewData["Title"] = "Delete Relief Task";
}

<h2 class="text-danger">Delete Relief Task</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this relief task?
</div>

<div>
    <strong>@Model.Title</strong><br />
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Priority:</strong> @Model.Priority</p>
    <p><strong>Disaster Report ID:</strong> @Model.DisasterReportId</p>
    <p><strong>Volunteer ID:</strong> @Model.VolunteerId</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
