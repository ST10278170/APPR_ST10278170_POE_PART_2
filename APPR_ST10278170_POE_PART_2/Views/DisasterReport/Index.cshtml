@model IEnumerable<APPR_ST10278170_POE_PART_2.Models.DisasterReport>

@{
    ViewData["Title"] = "Disaster Reports";
}

<h2 class="text-primary">Submitted Disaster Reports</h2>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Location</th>
            <th>Disaster Type</th>
            <th>Description</th>
            <th>Date Reported</th>
            <th>Severity</th>
            <th>Relief Required</th>
            <th>Reported By</th>
            <th>Status</th>
            <th>Verified</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Location</td>
                <td>@report.DisasterType</td>
                <td>@report.Description</td>
                <td>@report.DateReported.ToString("yyyy-MM-dd")</td>
                <td>@report.Severity</td>
                <td>@report.ReliefRequired</td>
                <td>@report.ReporterName</td>
                <td>@report.Status</td>
                <td>
                    @if (report.IsVerified)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
