@model APPR_ST10278170_POE_PART_2.Models.DonationReport

@{
    ViewData["Title"] = "Donation Details";
}

<h2>Donation Details</h2>

<div class="card mt-4">
    <div class="card-header bg-info text-white">
        Donation from @Model.DonorName
    </div>
    <div class="card-body">
        <p><strong>Donation Type:</strong> @Model.DonationType</p>
        <p><strong>Amount:</strong> @(Model.Amount.HasValue? Model.Amount.Value.ToString("F2") : "-")</p>
        <p><strong>Resource Type:</strong> @Model.ResourceType</p>
        <p><strong>Quantity:</strong> @(Model.Quantity.HasValue? Model.Quantity.Value.ToString() : "-")</p>
        <p><strong>Target Location:</strong> @Model.TargetLocation</p>
        <p><strong>Date Donated:</strong> @Model.DateDonated.ToString("yyyy-MM-dd")</p>
        <p><strong>Notes:</strong> @Model.Notes</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
