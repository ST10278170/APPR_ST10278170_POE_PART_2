@model APPR_ST10278170_POE_PART_2.Models.Volunteer

@{
    ViewData["Title"] = "Delete Volunteer";
}

<h2 class="text-danger">Delete Volunteer</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this volunteer record?
</div>

<div class="mt-3">
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
    <p><strong>Email Address:</strong> @Model.Email</p>
    <p><strong>Skills / Expertise:</strong> @Model.Skills</p>
    <p><strong>Availability Date:</strong> @Model.AvailableFrom.ToString("yyyy-MM-dd")</p>
    <p><strong>Preferred Location:</strong> @Model.PreferredLocation</p>
    <p><strong>Assigned:</strong> @(Model.IsAssigned ? "Yes" : "No")</p>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
